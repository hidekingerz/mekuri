{
  "$schema": "https://raw.githubusercontent.com/nicehash/tauri/v2/crates/tauri-cli/schema.json",
  "productName": "mekuri",
  "version": "0.1.0",
  "identifier": "com.mekuri.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "label": "main",
        "title": "mekuri",
        "width": 400,
        "height": 700,
        "minWidth": 280,
        "minHeight": 400,
        "resizable": true,
        "url": "index.html"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "dialog": {}
  }
}
